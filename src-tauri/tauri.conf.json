{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Moku",
  "version": "0.3.0",
  "identifier": "dev.moku.app",
  "build": {
    "frontendDist": "../dist",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Moku",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "dmg", "macos"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/suwayomi-server"
    ],
    "resources": {
      "binaries/suwayomi-bundle": "suwayomi-bundle"
    },
    "macOS": {
      "minimumSystemVersion": "11.0",
      "exceptionDomain": "localhost"
    }
  },
  "plugins": {
    "shell": {
      "open": true,
      "sidecar": [
        "binaries/suwayomi-server"
      ]
    }
  }
}